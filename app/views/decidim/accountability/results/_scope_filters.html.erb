<div class="scope-filters section">
  <% if current_organization.scopes.any? && !current_participatory_process.scope %>
    <%= t('results.filters.scopes', scope: "decidim.accountability") %>

    <ul class="tags tags--action">
      <li><%= link_to t("results.filters.all", scope: "decidim.accountability"), decidim_accountability.send(url_method, filter: { category_id: category.try(:id) }) %></li>
      <li><%= link_to t("results.filters.global", scope: "decidim.accountability"), decidim_accountability.send(url_method, filter: { scope_id: "global", category_id: category.try(:id) }) %></li>

      <% current_organization.scopes.each do |scope| %>
        <li><%= link_to scope.name, decidim_accountability.send(url_method, filter: { scope_id: scope.id, category_id: category.try(:id) }) %></li>
      <% end %>
    </ul>
  <% end %>
</div>
