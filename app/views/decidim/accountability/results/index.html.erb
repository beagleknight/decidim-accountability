<div class="row accountability">
  <div class="small-12 columns">
    <%= render partial: "scope_filters", locals: { url_method: :results_path} %>
  </div>

  <div class="small-12 medium-3 columns">
    <%= render partial: "nav_tree", locals: { category: category, result: nil} %>
  </div>

  <div class="small-12 medium-9 columns">
    <div class="title-action">
      <h2 id="results-count" class="title-action__title section-heading">
        <%= t("results.count.results_count", scope: "decidim.accountability", count: results.total_count) %>
      </h2>
    </div>

    <div class="row">
      <div id="results" class="columns">
        <% if results.any?{|r| r.children.any? } %>
          <%= render partial: "results_parent", locals: { results: results } %>
        <% else %>
          <%= render partial: "results_leaf", locals: { results: results } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag("decidim/filters") %>
