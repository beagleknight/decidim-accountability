<div class="card card--action card--list">
  <% result.projects.each do |project| %>
    <div class="card--list__item">
      <%= icon "actions", class: "card--list__icon", remove_icon_class: true %>
      
      <%= link_to project_path(project), class: "card--list__text card__link card__link--block" do %>
        <h5 class="card--list__heading">
          <%= translated_attribute(project.title) %>
        </h5>
        
        <div class="text-small card--meta">
            <strong><%= t("models.project.fields.start_date", scope: "decidim.accountability") %></strong>
            <span><%= project.start_date %></span>
            
            <strong><%= t("models.project.fields.end_date", scope: "decidim.accountability") %></strong>
            <span><%= project.end_date %></span>
            
            <strong><%= t("models.project.fields.status", scope: "decidim.accountability") %></strong>
            <span><%= t("models.project.valid_statuses.#{project.status}", scope: "decidim.accountability") %></span>
        </div>
      <% end %>
      
      <div class="card--list__data">
        <span class="card--list__data__number"><%= display_percentage project.progress %></span>
      </div>
    </div>
  <% end %>
</div>
