<% add_decidim_meta_tags({
  description: translated_attribute(project.description),
  title: translated_attribute(project.title),
  url: project_url(project.id)
}) %>

<div class="row accountability project-view">
  <div class="small-12 medium-3 columns">
    <%= render partial: "decidim/accountability/results/nav_tree", locals: { category: result.category, result: result} %>
  </div>
  <div class="small-12 medium-9 columns">
    <div class="title">
      <%= icon("proposals", class: "icon", aria_label: "TÃ­tol", role: "img") %>
      <h2 class="heading2"><%= translated_attribute project.title %></h2>
    </div>
    
    <div class="row">
      <div class="columns section mediumlarge-5 mediumlarge-push-7 end">
        <div class="progress-level">
          <div class="progress-label">
            <span class="progress-text">Progreso:</span>
            <span class="progress-figure">
              <%= display_percentage progress_calculator(current_scope, nil) %>
            </span>
          </div>

          <div class="progress">
            <div class="progress-meter" style="width:<%= display_percentage progress_calculator(current_scope, nil) %>"></div>
          </div>
        </div>
      </div>
      
      <div class="columns mediumlarge-3 mediumlarge-pull-5 end">
        <div class="section">
          <div class="project-meta">
            <div class="project-meta--label"><%= t("models.project.fields.start_date", scope: "decidim.accountability") %></div>
            <div class="project-meta--data"><%= project.start_date %></div>
          </div>
          
          <div class="project-meta">
            <div class="project-meta--label"><%= t("models.project.fields.end_date", scope: "decidim.accountability") %></div>
            <div class="project-meta--data"><%= project.end_date %></div>
          </div>
          
          <div class="project-meta">
            <div class="project-meta--label"><%= t("models.project.fields.status", scope: "decidim.accountability") %></div>
            <div class="project-meta--data"><%= t("models.project.valid_statuses.#{project.status}", scope: "decidim.accountability") %></div>
          </div>
        </div>
      </div>
      
      <div class="small-12 columns">
        <hr>
        
        <div class="section">
          <%== translated_attribute project.description %>
        </div>
      </div>
    </div>
    
  </div>
</div>

<%= comments_for project %>

<%= javascript_include_tag "decidim/proposals/social_share" %>
<%= stylesheet_link_tag "decidim/proposals/social_share" %>
