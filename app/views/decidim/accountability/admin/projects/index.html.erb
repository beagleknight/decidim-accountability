<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title", result_title: translated_attribute(result.title)) %>
      <%= link_to t("actions.new", scope: "decidim.accountability", name: t("models.project.name", scope: "decidim.accountability.admin")), new_result_project_path(result), class: 'button tiny button--title' if can? :manage, current_feature %>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.project.fields.title", scope: "decidim.accountability") %></th>
            <th class="actions"><%= t("actions.title", scope: "decidim.accountability") %></th>
          </tr>
        </thead>
        <tbody>
          <% projects.each do |project| %>
            <tr data-id="<%= project.id %>">
              <td>
                <%= translated_attribute(project.title) %><br />
              </td>
              <td class="table-list__actions">
                <%= icon_link_to "eye", decidim_accountability.result_project_path(id: project, result_id: result, feature_id: current_feature, participatory_process_id: current_participatory_process), t("actions.preview", scope: "decidim.accountability"), class: "action-icon--preview", target: :blank %>

                <% if can? :update, current_feature %>
                  <%= icon_link_to "pencil", edit_result_project_path(project.result, project), t("actions.edit", scope: "decidim.accountability"), class: "action-icon--edit" %>
                <% end %>

                <% if can? :destroy, current_feature %>
                  <%= icon_link_to "circle-x", result_project_path(project.result, project), t("actions.destroy", scope: "decidim.accountability"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.accountability") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate projects, theme: "decidim" %>
    </div>
  </div>
</div>
